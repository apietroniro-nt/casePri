[
  {
    "name": "Backend Error Rate High",
    "type": "query alert",
    "query": "sum(last_5m):sum:trace.http.request.errors{service:backend}.rollup(sum) > 5",
    "message": "High error rate on backend",
    "tags": ["service:backend"],
    "options": { "thresholds": { "critical": 5 } }
  },
  {
    "name": "Orders Failed Spike",
    "type": "query alert",
    "query": "sum(last_5m):sum:orders.failed{*}.rollup(sum) > 3",
    "message": "Spike in orders failed",
    "tags": ["service:backend"],
    "options": { "thresholds": { "critical": 3 } }
  }
]

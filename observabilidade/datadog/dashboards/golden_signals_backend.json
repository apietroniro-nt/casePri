{
  "title": "Backend Golden Signals",
  "description": "Latency, Traffic, Errors, Saturation for backend",
  "widgets": [
    { "definition": { "type": "timeseries", "title": "Latency (p95)", "requests": [{ "q": "avg:trace.http.request.duration{service:backend}.rollup(p95)" }] } },
    { "definition": { "type": "timeseries", "title": "Traffic (RPS)", "requests": [{ "q": "sum:trace.http.request.hits{service:backend}.rollup(sum)" }] } },
    { "definition": { "type": "timeseries", "title": "Errors (rate)", "requests": [{ "q": "sum:trace.http.request.errors{service:backend}.rollup(sum)" }] } },
    { "definition": { "type": "timeseries", "title": "Saturation (CPU %)", "requests": [{ "q": "avg:system.cpu.user{service:backend} by {host}" }] } }
  ]
}
